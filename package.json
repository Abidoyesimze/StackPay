{
  "name": "stackspay",
  "version": "1.0.0",
  "description": "Bitcoin Payment Gateway for Small Businesses - The Stripe of Bitcoin",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v --rmi all",
    "bit:start": "bit start",
    "bit:compile": "bit compile",
    "bit:export": "bit export",
    "bit:build": "bit build",
    "bit:tag": "bit tag",
    "bit:install": "bit install",
    "heroku-build": "npm_config_production=false pnpm install && pnpm --filter @stackspay/backend build"
    

  },
  "devDependencies": {
    "@turbo/gen": "^1.12.4",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^20.19.19",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "turbo": "^1.12.4",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "bitcoin",
    "payment-gateway",
    "stacks",
    "blockchain",
    "crypto",
    "payments",
    "merchant",
    "small-business"
  ],
  "author": "StacksPay Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dotunv/stackspay.git"
  },
  "bugs": {
    "url": "https://github.com/dotunv/stackspay/issues"
  },
  "homepage": "https://stackspay.com"
}
