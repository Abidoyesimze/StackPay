{
  "name": "@stackspay/backend",
  "version": "1.0.0",
  "description": "StacksPay Bitcoin Payment Gateway Backend",
  "main": "dist/app.js",
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "nodemon --exec ts-node app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "worker:monitor": "ts-node workers/payment-monitor.ts",
    "db:migrate": "ts-node scripts/migrate.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0 --ignore-pattern dist/",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@stacks/blockchain-api-client": "^7.8.0",
    "@stacks/network": "^6.13.0",
    "@stacks/stacks-blockchain-api-types": "^6.1.0",
    "@stacks/transactions": "^6.13.0",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "bull": "^4.12.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "logger": "^0.0.1",
    "pg": "^8.11.3",
    "qrcode": "^1.5.3",
    "rate-limit-redis": "^4.2.0",
    "redis": "^4.6.11",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.19.19",
    "@types/pg": "^8.15.5",
    "@types/qrcode": "^1.5.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
