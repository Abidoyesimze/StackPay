{
  "name": "@stackspay/backend",
  "version": "1.0.0",
  "description": "StacksPay Bitcoin Payment Gateway Backend",
  "main": "dist/app.js",
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "nodemon --exec ts-node app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "worker:monitor": "ts-node workers/payment-monitor.ts",
    "db:migrate": "ts-node scripts/migrate.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0 --ignore-pattern dist/",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@stacks/blockchain-api-client": "^8.13.1",
    "@stacks/network": "^7.2.0",
    "@stacks/stacks-blockchain-api-types": "^7.14.1",
    "@stacks/transactions": "^7.2.0",
    "axios": "^1.6.2",
    "bcrypt": "^6.0.0",
    "bull": "^4.12.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.0.1",
    "helmet": "^8.1.0",
    "logger": "^0.0.1",
    "pg": "^8.11.3",
    "qrcode": "^1.5.3",
    "rate-limit-redis": "^4.2.0",
    "redis": "^5.8.3",
    "uuid": "^13.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.2",
    "@types/pg": "^8.15.5",
    "@types/qrcode": "^1.5.5",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
