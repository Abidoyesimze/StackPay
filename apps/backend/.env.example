# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/stackspay
REDIS_URL=redis://localhost:6379

# Stacks Network Configuration
STACKS_NETWORK=testnet
STACKS_API_URL=https://api.testnet.hiro.so
STACKS_NETWORK_URL=https://stacks-node-api.testnet.stacks.co

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h

# API Configuration
API_KEY_SECRET=your-api-key-secret-change-this-in-production
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# Payment Configuration
PAYMENT_TIMEOUT=3600
MIN_CONFIRMATIONS=1
DEFAULT_CURRENCY=BTC

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-change-this-in-production
WEBHOOK_TIMEOUT=5000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Server Configuration
PORT=3001
NODE_ENV=development
HOST=0.0.0.0

# External APIs
BTC_PRICE_API_URL=https://api.coinbase.com/v2/exchange-rates
BTC_PRICE_API_KEY=your-coinbase-api-key

# File Storage (for QR codes, etc.)
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@stackspay.com
