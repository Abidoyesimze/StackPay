# Sevalla Environment Variables for StackPay Backend
# These will be automatically set by Sevalla based on your database and Redis configurations

# Application Configuration
NODE_ENV=production
PORT=3001

# Database Configuration (Auto-set by Sevalla PostgreSQL service)
DATABASE_URL=${DATABASE_URL}
DB_HOST=${DB_HOST}
DB_PORT=${DB_PORT}
DB_NAME=${DB_NAME}
DB_USER=${DB_USER}
DB_PASSWORD=${DB_PASSWORD}

# Redis Configuration (Auto-set by Sevalla Redis service)
REDIS_URL=${REDIS_URL}
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=${REDIS_PORT}
REDIS_PASSWORD=${REDIS_PASSWORD}

# Stacks Network Configuration
STACKS_NETWORK=mainnet
STACKS_API_URL=https://api.hiro.so
STACKS_NETWORK_URL=https://stacks-node-api.mainnet.stacks.co

# Security Configuration (Set these manually in Sevalla dashboard)
JWT_SECRET=your-jwt-secret-key-change-this-in-production
API_KEY_SECRET=your-api-key-secret-change-this-in-production
WEBHOOK_SECRET=your-webhook-secret-change-this-in-production

# CORS Configuration
CORS_ORIGIN=https://dashboard.stackspay.com,https://docs.stackspay.com
CORS_CREDENTIALS=true

# Payment Configuration
PAYMENT_TIMEOUT=3600
MIN_CONFIRMATIONS=1
DEFAULT_CURRENCY=BTC

# API Configuration
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# External APIs
BTC_PRICE_API_URL=https://api.coinbase.com/v2/exchange-rates
BTC_PRICE_API_KEY=your-coinbase-api-key

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@stackspay.com
